<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Product>UZonMail.Pro</Product>
		<AssemblyName>$(MSBuildProjectName)</AssemblyName>
		<PlatformTarget>x64</PlatformTarget>
		<LangVersion>13.0</LangVersion>
		<OutputType>Library</OutputType>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Debug'">
		<BaseOutputPath>..\..\SendMultipleEmails\backend-src\UZonMailService\bin\x64\Debug\net9.0\Plugins\UZonMailPro</BaseOutputPath>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Release'">
		<BaseOutputPath>bin\x64\Release\</BaseOutputPath>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="bin\**" />
		<Content Remove="bin\**" />
		<EmbeddedResource Remove="bin\**" />
		<None Remove="bin\**" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Services\License\PrivateKey.pem" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="Services\License\PrivateKey.pem" />
	</ItemGroup>

	<ItemGroup>		
	  <PackageReference Include="DeviceId" Version="6.7.0" />		
	  <PackageReference Include="Jint" Version="4.1.0" />		
	  <PackageReference Include="Microsoft.AspNetCore.SignalR.Core" Version="1.1.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\SendMultipleEmails\backend-src\Plugins\UZonMailCorePlugin\UZonMailCorePlugin.csproj" />
		<ProjectReference Include="..\..\SendMultipleEmails\backend-src\UZonMailUtils\UZonMailUtils.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Controllers\EmailCrawler\Model\" />
	  <Folder Include="Controllers\Settings\" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="Scripts\JS\a_bogus.js">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="Scripts\JS\x_bogus.js">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
